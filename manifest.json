{
	"manifest_version": 2,
	"name": "Rotten",
	"version": "1.0",

	"permissions": ["<all_urls>", "tabs", "find"],

	"sidebar_action": {
		"default_title": "Rotten",
		"default_panel": "sidebar/panel.html",
		"default_icon": "icons/rotten.png"
	},

	"commands": {
		"_execute_sidebar_action": {
			"suggested_key": {
				"default": "Alt+Shift+P"
			}
		}	
	},

	"background": {
		"scripts": ["background.js"]
	}
}

